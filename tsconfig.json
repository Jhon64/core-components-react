{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true ,
    
    "outDir": "dist", 
    "allowSyntheticDefaultImports": true,
    "strict": false,  // Desactiva todas las opciones estrictas
    "noImplicitAny": false,  // Permite el uso de 'any' implícito
    "strictNullChecks": false,  // No te va a advertir de valores null o undefined
    "noImplicitThis": false,  // Permite el uso de 'this' con tipo implícito
    "alwaysStrict": false,  // No te obliga a usar "use strict" en los archivos
    "strictBindCallApply": false,  // No te advierte de errores en bind, call y apply
    "noImplicitReturns": false,  // No requiere que todas las funciones tengan un retorno explícito
    "noFallthroughCasesInSwitch": false , // No te avisa si un case de un switch no tiene 'break'
    "strictPropertyInitialization": false  // Permite propiedades no inicializadas en las clases 
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist",
  "**/node_modules/**/*.d.ts",]
}
